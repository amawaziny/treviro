rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Match any file in users/{userId}/**
    match /users/{userId}/{allPaths=**} {
      // Allow read access to any user
      allow read: if true;
      
      // Allow write access only if the request is from an authenticated user
      // and they are writing to their own user directory
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other requests
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
